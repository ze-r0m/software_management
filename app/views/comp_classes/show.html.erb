<div class="container mt-4">
  <p class="text-success"><%= notice %></p>

  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Аудитория: <%= @comp_class.aud_number %></h2>
      <%= link_to comp_classes_path, class: 'btn btn-secondary' do %>
        <i class="bi bi-arrow-left"></i> Назад
      <% end %>
    </div>

    <div class="card-body">
      <h5 class="text-muted mb-3">Характеристики аудитории</h5>

      <dl class="row">
        <dt class="col-sm-4">Кафедра:</dt>
        <dd class="col-sm-8"><%= @comp_class.cafedra.name %></dd>

        <dt class="col-sm-4">Посадочных мест:</dt>
        <dd class="col-sm-8"><%= @comp_class.count_seat %></dd>

        <dt class="col-sm-4">Компьютеров:</dt>
        <dd class="col-sm-8"><%= @comp_class.count_comp %></dd>

        <dt class="col-sm-4">Мест за компьютерами:</dt>
        <dd class="col-sm-8"><%= @comp_class.count_comp_seat %></dd>

        <dt class="col-sm-4">Проектор:</dt>
        <dd class="col-sm-8">
          <i class="bi <%= @comp_class.projector ? 'bi-check-circle text-success' : 'bi-x-circle text-danger' %>"></i>
          <%= @comp_class.projector ? 'Есть' : 'Нет' %>
        </dd>

        <dt class="col-sm-4">Панель:</dt>
        <dd class="col-sm-8">
          <i class="bi <%= @comp_class.panel ? 'bi-check-circle text-success' : 'bi-x-circle text-danger' %>"></i>
          <%= @comp_class.panel ? 'Есть' : 'Нет' %>
        </dd>

        <dt class="col-sm-4">Меловая доска:</dt>
        <dd class="col-sm-8">
          <i class="bi <%= @comp_class.ch_board ? 'bi-check-circle text-success' : 'bi-x-circle text-danger' %>"></i>
          <%= @comp_class.ch_board ? 'Есть' : 'Нет' %>
        </dd>

        <dt class="col-sm-4">Специальное назначение:</dt>
        <dd class="col-sm-8"><%= @comp_class.spec_purpose.presence || '—' %></dd>
      </dl>

      <div class="mt-4 d-flex gap-2">
        <%= link_to edit_comp_class_path(@comp_class), class: 'btn btn-primary' do %>
          <i class="bi bi-pencil"></i> Редактировать
        <% end %>
        <%= link_to @comp_class, method: :delete,
                    data: { confirm: 'Вы уверены?' },
                    class: 'btn btn-danger' do %>
          <i class="bi bi-trash"></i> Удалить
        <% end %>
      </div>
    </div>
  </div>
</div>
