<%= form_with(model: faculty) do |form| %>

  <div class="card shadow">
    <div class="card-body">
      <div class="mb-3">
        <%= form.label :name, "Название факультета", class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control'%>
      </div>

      <div class="mb-3">
        <%= form.label :description, "Примечания", class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', rows: 3 %>
      </div>

      <div class="d-flex justify-content-end gap-2">
        <%= link_to 'Отмена', faculties_path, class: 'btn btn-secondary' %>
        <%= form.submit "Сохранить", class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>