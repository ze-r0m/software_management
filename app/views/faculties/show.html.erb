  <%#= link_to "Back to faculties", faculties_path %>

  <%#= button_to "Destroy this faculty", @faculty, method: :delete %>
<!--</div>-->

<div class="container mt-4">

  <p style="color: green"><%= notice %></p>

  <div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Факультет: <%= @faculty.name %></h2>
      <%= link_to faculties_path, class: 'btn btn-secondary' do %>
        <i class="bi bi-arrow-left"></i> Назад
      <% end %>
    </div>

    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-6">
          <h5 class="text-muted">Основная информация</h5>
          <dl class="row">
            <dt class="col-sm-4">Название:</dt>
            <dd class="col-sm-8"><%= @faculty.name %></dd>

            <dt class="col-sm-4">Примечания:</dt>
            <dd class="col-sm-8"><%= @faculty.add_note.presence || '—' %></dd>
          </dl>
        </div>
      </div>

      <div class="d-flex gap-2">
        <%= link_to edit_faculty_path(@faculty), class: 'btn btn-primary' do %>
          <i class="bi bi-pencil"></i> Редактировать
        <% end %>
        <%= link_to 'Удалить', @faculty,
                    method: :delete,
                    data: { confirm: 'Вы уверены?' },
                    class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
